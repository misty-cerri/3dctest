 			<!-- <security:password-encoder hash="plaintext" /> -->
	 		<!-- <security:user-service>
	 			<security:user name="cerri" password="cerino" authorities="ROLE_ADMIN" />
	 		</security:user-service> -->
 		</security:authentication-provider>
 	</security:authentication-manager>
	
</beans:beans>